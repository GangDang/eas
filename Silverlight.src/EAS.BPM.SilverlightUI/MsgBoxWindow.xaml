<controls:ChildWindow x:Class="EAS.BPM.SilverlightUI.MsgBoxWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" Width="400" Height="160" Title="MsgBox">
    <Grid x:Name="LayoutRoot" Margin="2">
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="68"/>
    		<ColumnDefinition />
    	</Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="msgBlock" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Column="1"></TextBlock>
        <Image x:Name="imgIcon" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Source="png/Message.png" />
    </Grid>
</controls:ChildWindow>
