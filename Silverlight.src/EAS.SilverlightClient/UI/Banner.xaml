<UserControl x:Class="EAS.SilverlightClient.UI.Banner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="70" d:DesignWidth="1024">

    <Grid x:Name="LayoutRoot" Background="White">
        <Image Margin="0,0,0,0" Grid.Row="0" Source="/EAS.SilverlightClient;component/Images/header.png"  Stretch="Fill"/>
        <Button x:Name="btnCPassword"  Grid.Row="0" Height="28" Width="70" VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" Margin="0,30,100,10" Content="修改密码" Click="btnCPassword_Click"/>
        <Button x:Name="btnLogout"   Grid.Row="0" Height="28" Width="70" VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" Margin="0,30,10,10" Content="注销登录" Click="btnLogout_Click"/>
    </Grid>
</UserControl>
